<div class="container">

  <% @users.each do |user| %>
      <% if user.id == current_user.id %>
        <%= profile_img(user) %><br>
        <%= link_to user.name, user %>
    <% end %>
  <% end %>
  <br>  <br>
<h2>ともだちかも？</h2>
  <br>
    <% @users.each do |user| %>
      <% if user.id != current_user.id %>
        <%= profile_img(user) %><br>
        <%= link_to user.name, user %>
        <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
    <br><br>
    <% end %>
  <% end %>
</div>