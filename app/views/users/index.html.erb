<div class="container">
  <h2>ユーザー</h2>
  <% @users.each do |user| %>
      <div class="container-child col-md-2 col-sm-4 col-xs-6 ">
        <%= profile_img(user) %>
        <%= user.email %>


        <% if user.id != current_user.id %>
        
  <li>
    <div class="item">
      <%= link_to user.name, user %>
      <BR>
    </div>
    <%= render partial: 'follow_form', locals: { user: user } if signed_in?   %>
  </li>
<% end %>
        
      </div>
  <% end %>
</div>